<div class="container">
    <div class="jumbotron" style="margin-top: 10px;">
     <form method="post" action="/world"  >
       

      
      <input type="text" class="form-control" name="search" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter city">

        <button class="btn btn-primary btn-small" type="submit" style="margin-top: 5px;">Search</button>
     </form>   
    </div>

{{#if data}}

    <div class="jumbotron" >
      <canvas id="myChart" ></canvas>
    </div>
</div>


<script type="text/javascript">

    var ctx = document.getElementById('myChart').getContext('2d');

var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'bar',

    // The data for our dataset
    data: {
        labels: ['Total Cases','Today Cases','Deaths','Today Deaths','Recoverd','Active','Critical'],
        datasets: [{
            label: `Current Update on COVID-19 {{data.country}}`,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)',
                'rgba(255, 99, 132, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 2,
            data:[`{{data.cases}}`,`{{data.todayCases}}`,`{{data.deaths}}`,`{{data.todayDeaths}}`,`{{data.recovered}}`,`{{data.active}}`,`{{data.critical}}`]
        }]
    },

    // Configuration options go here
    options: { //your chart options
   plugins: {
      datalabels: {
      }
   }
}
});
</script>


{{/if}}